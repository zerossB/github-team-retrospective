# GitHub Team Retrospective configuration

# GitHub organization name
organization: "example"

# Repository list to analyze
# Leave empty [] to analyze all organization repositories
# Or provide only the repo names (no owner/):
repositories: []
  # - "repo1"
  # - "repo2"
  # - "repo3"

# GitHub access token
# RECOMMENDED: Use the GITHUB_TOKEN environment variable instead of writing it here
# Generate at: https://github.com/settings/tokens
# Required scopes: repo, read:org
github_token: ""

# Analysis period
# Format: YYYY-MM-DD
# Use null for end_date to use the current date
start_date: "2025-01-01"
end_date: null

# Output settings
output_dir: "reports"
output_formats:
  - "html"
  - "markdown"

# Advanced options
options:
  # Include archived repositories
  include_archived: false

  # Include forked repositories
  include_forks: false

  # Maximum number of workers for parallelism
  max_workers: 5

  # Request timeout (seconds)
  timeout: 30

  # Data cache
  enable_cache: true
  cache_ttl: 3600  # seconds

  # Verbose output
  verbose: true

  # Local repositories path (optional)
  # If provided, commits will be read from local Git repositories instead of API
  # This significantly reduces API calls. Format: "/path/to/repos/{repo_name}"
  # Example: "/home/user/projects/{repo_name}" or "C:/Projects/{repo_name}"
  # The {repo_name} placeholder will be replaced with each repository name
  local_repos_path: null  # null = use GitHub API
